<Window x:Class="EmployeeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DGEmployeesData" HorizontalAlignment="Left" Height="400" Margin="120,10,0,0" VerticalAlignment="Top" Width="600"/>
        <Label Content="Opcje:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" HorizontalContentAlignment="Center"/>
        <Button x:Name="BtnAddEmployee" Content="Dodaj" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="100" Height="25"/>
        <Button x:Name="BtnEditEmployee" Content="Edytuj" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Width="100" Height="25"/>
        <Button x:Name="BtnDeleteEmployee" Content="Usuń" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" Width="100" Height="25"/>
    </Grid>
</Window>
